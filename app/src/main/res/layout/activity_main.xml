<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pub.war3.lockmyphone.MainActivity">

    <Button
        android:id="@+id/btn_open_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入单机版" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2" />

    <Button
        android:id="@+id/btn_open_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入控制端" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2" />

    <Button
        android:id="@+id/btn_produce_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生成Key和密码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:hint="key" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:hint="密码" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复制Key和密码" />

            <Button
                android:id="@+id/btn_generate_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生成二维码" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2" />

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="点击设置按钮，隐藏此界面，重启app恢复"
        android:textColor="@color/black" />
</LinearLayout>
